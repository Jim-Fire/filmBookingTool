<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <% if (o.imagePath) { %>
        <img class="card-img-top" src="<%= o.imagePath %>">
    <% } else { %>
        <img class="card-img-top" src='files/default_poster.jpg'>
    <% } %>
    <div class="card-body">
      <p class="card-text"><%= o.description %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
        <% if (!o.notShow) { %>
          <button type="button" class="btn btn-sm btn-outline-success btn-show-film">
              <a href="seanses/<%= o._id %>">Show Seans</a>
          </button>
        <% } %>
        </div>
        <% if (o.price) { %>
            <small class="text-muted"><i class="fas fa-wallet color-success"></i> <%= o.price %></small>
        <% } %>
      </div>
    </div>
  </div>
</div>